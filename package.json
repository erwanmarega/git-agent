{
  "name": "@erwanmarega/git-agent",
  "version": "1.0.0",
  "description": "AI-powered Git assistant - Generate intelligent commit messages, detect secrets, analyze changes, and automate your Git workflow with Claude AI",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./cli": {
      "require": "./dist/cli.js",
      "import": "./dist/esm/cli.js"
    }
  },
  "bin": {
    "git-agent": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "ts-node src/cli.ts",
    "dev:watch": "nodemon --exec ts-node src/cli.ts",
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc -p tsconfig.types.json",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli.js",
    "test": "echo \"Tests coming soon\"",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "git",
    "ai",
    "commit",
    "assistant",
    "claude",
    "anthropic",
    "conventional-commits",
    "automation",
    "developer-tools",
    "cli",
    "secrets-detection",
    "code-review"
  ],
  "author": "erwanmarega",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erwanmarega/git-agent.git"
  },
  "bugs": {
    "url": "https://github.com/erwanmarega/git-agent/issues"
  },
  "homepage": "https://github.com/erwanmarega/git-agent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "inquirer": "^13.1.0",
    "ora": "^9.0.0",
    "simple-git": "^3.30.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": ">=0.50.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    }
  }
}
